# United Fabrics Scraper Configuration

# Site URLs
UF_BASE_URL=https://www.unitedfabrics.com
UF_LOGIN_URL=https://www.unitedfabrics.com/my-account/
UF_START_LISTING=https://www.unitedfabrics.com/fabric/

# Credentials (DO NOT commit .env with real values)
UF_EMAIL=__REPLACE_WITH_YOUR_EMAIL__
UF_PASSWORD=__REPLACE_WITH_YOUR_PASSWORD__

# Apify (optional)
APIFY_TOKEN=
APIFY_DEFAULT_KEY_VALUE_STORE_ID=

# Proxy (optional, e.g. "http://user:pass@host:port")
PROXY_URL=

# Scraper Limits & Behavior
MAX_PAGES=0                      # 0 = no limit; use 3 for testing
CONCURRENCY=3
REQUEST_TIMEOUT_MS=45000
RESPECT_ROBOTS_TXT=false
INCREMENTAL_MODE=true

# Brand Filter (optional substring)
BRAND_FILTER=
